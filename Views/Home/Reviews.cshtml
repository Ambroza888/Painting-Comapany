                </div>

               <section id="Reviews" class="text-center gap100">
                    <h1 class="colorblue">Reviews</h1>
                    <div class="row mt-5 underscore">
                        <div class="col-md-2">
                            <img src="https://standaloneinstaller.com/upload/avatar.png" alt="">
                        </div>
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-12">
                                    <p>COMENTS ! lorempruiqweqwe jrqwe1 00000 e0qwejkjwrmn1 kqrwmjqwrj</p>
                                </div>
                                <div class="col-6">
                                    <p class="smallp">Veso | Seattle,WA</p>
                                    <p>January 31, 2020</p>
                                </div>
                                <div class="col-6 text-right">
                                    <p>&#9733&#9733&#9733&#9733&#9733</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-12 text-left">
                            <h3>Write a Review</h3>
                            <form action="#######################" class="mt-4" method="POST">
                                <h5>Comment</h5>
                                <span asp-validation-for="Text"></span>
                                <textarea class="form-control" required="required" rows="8" asp-for="Text"></textarea>
                                <div class="row mt-3 p-0">
                                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                                        <span asp-validation-for="FirstName"></span>
                                        <input asp-for="FirstName" placeholder="First Name*">
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                                        <span asp-validation-for="LastName"></span>
                                        <input asp-for="LastName" placeholder="Last Name*">
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                                        <span asp-validation-for="Area"></span>
                                        <input asp-for="Area" placeholder="Area*">
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                                        <span asp-validation-for="Rating"></span>
                                        <select asp-for="Rating">
                                            <option value="0">Rating</option>
                                            <option value="1">1 Star</option>
                                            <option value="2">2 Stars</option>
                                            <option value="3">3 Stars</option>
                                            <option value="4">4 Stars</option>
                                            <option value="5">5 Stars</option>
                                        </select>
                                    </div>
                                </div>
                                <button class="btn btn-primary btn-xl">Submit Review</button>
                            </form>
                        </div>
                    </div>
               </section>
            </div>
        </div>